          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "collecting institution" : {
          "description" : "Name of the institution to which the person collecting the specimen belongs. Format: Institute Name, Institute Address",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "isolate" : {
          "description" : "individual isolate from which the sample was obtained",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "strain" : {
          "description" : "Name of the strain from which the sample was obtained.",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "isolation source host-associated" : {
          "description" : "Name of host tissue or organ sampled for analysis. Example: tracheal tissue",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "diagnostic method" : {
          "description" : "The method or procedure (imaging, genetic or other) performed to determine or confirm the presence of disease in an individual. Examples: microscopy, immunofluorescence, PCR, rapid tests, etc.",
