{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "https://www.ebi.ac.uk/biosamples/schemas/ENA-ENA_parasite_sample_checklist/1.0.0",
  "title" : "ENA parasite sample checklist",
  "description" : "Minimum information about parasite samples. A checklist for reporting metadata of parasite samples associated with molecular data. This standard was developed by the COMPARE platform and can be used for submission of sample metadata derived from protozoan parasites (e.g. Cryptosporidium) and also multicellular eukaryotic parasites (e.g. Platyhelminthes and Nematoda).",
  "type" : "object",
  "properties" : {
    "name" : {
      "type" : "string"
    },
    "accession" : {
      "type" : "string"
    },
    "characteristics" : {
      "type" : "object",
      "required" : [ "dev_stage", "collection date", "geographic location (country and/or sea)", "collector name", "collecting institution", "isolate" ],
      "recommended" : [ "known pathogenicity", "geographic location (latitude)", "geographic location (longitude)", "host disease outcome", "host common name", "host subject id", "host age", "host health state", "host sex", "host scientific name", "strain", "isolation source host-associated", "diagnostic method", "genotype", "isolation source non-host-associated" ],
      "properties" : {
        "dev_stage" : {
          "description" : "if the sample was obtained from an organism in a specific developmental stage, it is specified with this qualifier",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "known pathogenicity" : {
          "description" : "To what is the entity pathogenic, for instance plant, fungi, bacteria",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "sample storage conditions" : {
          "description" : "Conditions at which sample was stored, usually storage temperature, duration and location. In soil context: Explain how and for how long the soil sample was stored before DNA extraction (fresh/frozen/other).",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "subject exposure" : {
          "description" : "Exposure of the subject to infected human or animals, such as poultry, wild bird or swine. If multiple exposures are applicable, please state them separated by semicolon. Example: poultry; wild bird",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "travel-relation" : {
          "description" : "Designates the relation of the main diagnosis to the patient's travel.",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "enum" : [ "not ascertainable", "not travel-related", "travel-related" ]
              }
            },
            "required" : [ "text" ]
          }
        },
        "clinical setting" : {
          "description" : "The timing of the clinic visit in relation to travel.",
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "enum" : [ "after travel", "during travel" ]
              }
            },
            "required" : [ "text" ]
          }
        },
