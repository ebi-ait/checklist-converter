          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "host common name" : {
          "description" : "common name of the host, e.g. human",
          "type" : "array",
          "items" : {
            "type" : "object",
