            "properties" : {
              "text" : {
                "type" : "string",
                "pattern" : "(0|((0\\.)|([1-9][0-9]*\\.?))[0-9]*)([Ee][+-]?[0-9]+)?"
              }
            },
            "required" : [ "text" ]
          }
        },
        "host disease status" : {
