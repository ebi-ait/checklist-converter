          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "text" : {
                "type" : "string"
              }
            },
            "required" : [ "text" ]
          }
        },
        "trial length" : {
          "description" : "Length of time from the beginning of the trial until the end of the trial",
          "type" : "array",
          "items" : {
