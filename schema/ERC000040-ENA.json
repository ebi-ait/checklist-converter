            "tag" : {
              "enum" : [ "isolation_source" ]
            },
            "value" : {
              "type" : "string"
            },
            "unit" : {
              "type" : "string"
            }
          },
          "required" : [ "tag", "value" ]
        },
        "minContains" : 0,
        "maxContains" : 1,
        "recommended" : false
      }, {
        "contains" : {
          "type" : "object",
          "description" : "name of persons or institute who collected the specimen",
