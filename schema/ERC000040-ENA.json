    "brokerName" : {
      "type" : "string"
    },
    "title" : {
      "type" : "string"
    },
    "description" : {
      "type" : "string"
    },
    "organism" : {
      "$ref" : "#/definitions/organism"
    },
    "attributes" : {
      "type" : "array",
      "allOf" : [ {
        "contains" : {
          "type" : "object",
          "description" : "The method employed for collecting the sample. Can be provided in the form of a PMID, DOI, url or text.",
          "properties" : {
            "tag" : {
              "enum" : [ "sample collection method", "samp_collec_method", "sample collection device or method", "sample_collec_method" ]
            },
            "value" : {
              "type" : "string"
            },
            "unit" : {
              "type" : "string"
            }
          },
          "required" : [ "tag", "value" ]
        },
        "minContains" : 0,
        "maxContains" : 1,
        "recommended" : false
      }, {
        "contains" : {
          "type" : "object",
          "description" : "Refers to the mesh/pore size used to retain the sample. Materials smaller than the size threshold are excluded from the sample",
          "properties" : {
            "tag" : {
              "enum" : [ "size-fraction lower threshold", "Size Fraction Lower Threshold" ]
            },
            "value" : {
              "type" : "string",
              "pattern" : "(0|((0\\.)|([1-9][0-9]*\\.?))[0-9]*)"
            },
            "unit" : {
              "type" : "string"
            }
          },
          "required" : [ "tag", "value" ]
        },
        "minContains" : 0,
        "maxContains" : 1,
        "recommended" : false
      }, {
        "contains" : {
          "type" : "object",
          "description" : "Refers to the mesh/pore size used to pre-filter/pre-sort the sample. Materials larger than the size threshold are excluded from the sample",
          "properties" : {
            "tag" : {
              "enum" : [ "size-fraction upper threshold", "Size Fraction Upper Threshold" ]
            },
            "value" : {
              "type" : "string",
              "pattern" : "(0|((0\\.)|([1-9][0-9]*\\.?))[0-9]*)([Ee][+-]?[0-9]+)?"
            },
            "unit" : {
              "type" : "string"
            }
          },
          "required" : [ "tag", "value" ]
        },
        "minContains" : 0,
        "maxContains" : 1,
        "recommended" : false
      }, {
        "contains" : {
          "type" : "object",
          "description" : "Targeted gene or locus name for marker gene studies",
