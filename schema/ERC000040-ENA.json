        "secondaryAccessions" : {
          "type" : "array",
          "items" : {
            "type" : "string"
          }
        }
      }
    },
    "organism" : {
      "type" : "object",
      "properties" : {
        "taxonId" : {
          "type" : "string"
        },
        "commonName" : {
          "type" : "string"
        },
        "scientificName" : {
          "type" : "string"
        },
        "anonymizedName" : {
          "type" : "string"
        },
        "individualName" : {
          "type" : "string"
        }
      }
    },
    "attribute" : {
      "type" : "object",
      "properties" : {
        "tag" : {
          "type" : "string"
        },
        "value" : {
          "type" : "string"
        },
        "unit" : {
          "type" : "string"
        }
      }
    },
    "link" : {
      "type" : "object",
      "properties" : {
        "xrefLink" : {
          "$ref" : "#/definitions/xrefLink"
        },
        "urlLink" : {
          "$ref" : "#/definitions/urlLink"
        }
      }
