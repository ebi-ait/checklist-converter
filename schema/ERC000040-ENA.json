{
  "$schema" : "https://json-schema.org/draft/2019-09/schema",
  "$id" : "https://www.ebi.ac.uk/biosamples/schemas/ENA-ENA_UniEuk_EukBank_Checklist/1.0.0",
  "title" : "ENA UniEuk_EukBank Checklist",
  "description" : "Minimum information required for reporting samples associated with the UniEuk EukBank initiative. This checklist aims to capture contextual metadata associated with V4 18S SSU rRNA molecular data.",
  "definitions" : {
    "externalAccession" : {
      "type" : "object",
      "properties" : {
        "db" : {
          "type" : "string"
        },
        "id" : {
          "type" : "string"
        }
      }
    },
    "xrefLink" : {
      "type" : "object",
      "properties" : {
        "db" : {
          "type" : "string"
        },
        "id" : {
          "type" : "string"
        }
      }
    },
    "urlLink" : {
      "type" : "object",
      "properties" : {
        "label" : {
          "type" : "string"
        },
        "url" : {
          "type" : "string"
        }
      }
    },
    "identifiers" : {
      "type" : "object",
      "properties" : {
        "externalAccessions" : {
          "type" : "array",
