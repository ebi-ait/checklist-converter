            "tag" : {
              "enum" : [ "target subfragment" ]
            },
            "value" : {
              "type" : "string"
            },
            "unit" : {
              "type" : "string"
            }
          },
          "required" : [ "tag", "value" ]
        },
        "minContains" : 1,
        "maxContains" : 1,
        "recommended" : true
      }, {
        "contains" : {
          "type" : "object",
          "description" : "describes the physical, environmental and/or local geographical source of the biological sample from which the sample was derived",
