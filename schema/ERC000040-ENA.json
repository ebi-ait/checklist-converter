            "tag" : {
              "enum" : [ "target gene" ]
            },
            "value" : {
              "type" : "string"
            },
            "unit" : {
              "type" : "string"
            }
          },
          "required" : [ "tag", "value" ]
        },
        "minContains" : 1,
        "maxContains" : 1,
        "recommended" : true
      }, {
        "contains" : {
          "type" : "object",
          "description" : "Name of subfragment of a gene or locus. Important to e.g. identify special regions on marker genes like V6 on 16S rRNA",
