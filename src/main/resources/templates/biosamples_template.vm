{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "${schema_id}",
  "title": "${schema_title}",
  "description": "${schema_description}",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "accession": {
      "type": "string"
    },
    "characteristics": {
      "type": "object",
      "required": ${required},
      "recommended": ${recommended},
      "properties": {
      #foreach ($property in $properties)
        "$property.name()": {
          "type":"array",
          "items":{
            "properties": {
              "text": $property.type()

              #if ($property.units())
              ,
              "unit": {
              "enum": [
                #foreach ($unit in $property.units())
                "${unit}"#if( $foreach.hasNext ),#end
                #end
              ]
              }
              #end


            },
            "required":["text"]
          }
        }#if( $foreach.hasNext ),#end
      #end
      }
    }
  },
  "required": [
    "name",
    "characteristics"
  ]
}